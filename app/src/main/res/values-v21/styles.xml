<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">@color/primary_color_dark</item>
        <item name="patternViewStyle">@style/PatternView.Holo.Light</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="MyActionBar" parent="android:Widget.ActionBar" >
        <item name="android:background">@color/primary_color</item>
        <item name="android:height">100dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:titleTextStyle">@style/MyText</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textColor">@color/primary_color_dark</item>
    </style>
    <style name="MyText" parent="android:TextAppearance" >
        <item name="android:textColor">@color/primary_color_dark</item>
        <item name="android:textSize">40sp</item>
    </style>
</resources>
